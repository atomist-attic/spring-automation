{
  "name": "@atomist/spring-automation",
  "version": "0.7.0",
  "description": "Atomist automations for Spring: Generators, reviewers and editors",
  "author": "Atomist",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomist/spring-automation.git"
  },
  "homepage": "https://github.com/atomist/spring-automation#readme",
  "bugs": {
    "url": "https://github.com/atomist/spring-automation/issues"
  },
  "keywords": [
    "atomist",
    "automation",
    "seed",
    "spring"
  ],
  "dependencies": {
    "@atomist/antlr": "https://r.atomist.com/rJEEER0ClX",
    "@atomist/automation-client": "^0.17.2-20180613153815",
    "@atomist/microgrammar": "^0.7.0-20180528084001",
    "@atomist/slack-messages": "^0.12.1",
    "@atomist/tree-path": "^0.1.8",
    "@atomist/yaml-updater": "^0.3.0",
    "@typed/curry": "^1.0.1",
    "app-root-path": "^2.0.1",
    "axios": "^0.17.1",
    "lodash": "^4.17.10",
    "logzio-nodejs": "^0.4.10",
    "npm": "^6.0.1",
    "promise-retry": "^1.1.1",
    "serialize-error": "^2.1.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "winston-logzio": "^1.0.6",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/axios-mock-adapter": "^1.9.0",
    "fast-xml-parser": "^2.5.1",
    "@types/lodash": "^4.14.108",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.46",
    "@types/power-assert": "^1.4.29",
    "@types/tmp": "0.0.33",
    "axios-mock-adapter": "^1.10.0",
    "copyfiles": "^1.2.0",
    "espower-typescript": "^8.0.2",
    "fs-extra": "^4.0.2",
    "graphql-code-generator": "^0.8.13",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "tmp": "0.0.33",
    "typedoc": "^0.11.1",
    "typescript-formatter": "^7.2.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch src,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "npm-run-all lint compile test typedoc",
    "clean": "npm-run-all clean:js clean:build",
    "clean:build": "npm-run-all clean:gql clean:ts clean:run",
    "clean:dist": "npm-run-all clean clean:npm",
    "clean:gql": "rimraf src/typings/types.ts",
    "clean:js": "rimraf \"{src,test}/**/*.js\"",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt build",
    "clean:ts": "rimraf build",
    "compile": "npm-run-all git:info compile:gql compile:ts",
    "compile:gql": "npm-run-all gql:gen gql:copy",
    "compile:ts": "tsc --project .",
    "fmt": "tsfmt --replace",
    "git:info": "atomist git",
    "gql:copy": "copyfiles \"src/**/*.graphql\" build",
    "gql:gen": "atomist gql-gen --no-install \"{graphql,src}/**/*.graphql\"",
    "lint": "tslint --format verbose --project . --exclude \"{build,node_modules}/**\" \"**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --require espower-typescript/guess \"test/**/*.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.ts}\"",
    "typedoc": "typedoc --mode modules --excludeExternals --out build/typedoc src"
  },
  "engines": {
    "node": "9.x.x",
    "npm": "5.x.x"
  }
}
